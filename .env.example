# Shopify MCP Server Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Your Shopify store's access token (starts with shpat_)
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here

# Your Shopify store domain (e.g., your-store.myshopify.com)
MYSHOPIFY_DOMAIN=your-store.myshopify.com

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Debug mode - enables detailed logging and debugging features
# Values: true, false
# Default: false
DEBUG_MODE=false

# Logging level - controls the verbosity of logs
# Values: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Tool package to load - determines which tools are available
# Values: none, basic, full, product_management, customer_service, order_management
# Default: full
MCP_TOOL_PACKAGE=full

# Request timeout in milliseconds
# Default: 30000 (30 seconds)
TIMEOUT=30000

# Number of retry attempts for failed requests
# Default: 3
RETRY_ATTEMPTS=3

# SSL certificate verification
# Values: true (verify certificates), false (skip verification)
# Default: true (recommended for production)
# Set to false for development with self-signed certificates
SSL_VERIFY=true

# =============================================================================
# TOOL PACKAGE DESCRIPTIONS
# =============================================================================

# none: No tools loaded
# basic: Essential read-only tools (get-products, get-product-by-id, get-customers, get-orders)
# full: All available tools (default)
# product_management: Product-focused tools
# customer_service: Customer and order management
# order_management: Order-specific tools

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development environment with full debugging
# DEBUG_MODE=true
# LOG_LEVEL=DEBUG
# MCP_TOOL_PACKAGE=full

# Production environment with minimal logging
# DEBUG_MODE=false
# LOG_LEVEL=INFO
# MCP_TOOL_PACKAGE=basic

# Customer service focused environment
# DEBUG_MODE=false
# LOG_LEVEL=INFO
# MCP_TOOL_PACKAGE=customer_service
